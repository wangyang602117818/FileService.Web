@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="~/image/data.ico" type="image/x-ico" />
    @Scripts.Render("~/scripts/index-common-js")

    @Scripts.RenderFormat("<script type=\"text/javascript\" src=\"{0}\" datepicker-template=\"" + Url.Content("~/scripts/datepicker-template.html") + "\" datepicker-css=\""+Url.Content("~/css/datepicker-orange.min.css") +"\"></script>", "~/scripts/datepicker")

    @{
        if (CultureInfo.GetCulture() == "zh-CN")
        {
            <title>文件管理系统</title>
            @Scripts.Render("~/scripts/culture_zh-CN")
        }
        else
        {
            <title>File Management</title>
            @Scripts.Render("~/scripts/culture_en-US")
        }
    }
    @Styles.Render("~/css/index")
</head>
<body>
    <div id="index"></div>
    <input type="hidden" name="userName" id="userName" value="@ViewBag.Name" />
    <input type="hidden" name="role" id="role" value="@ViewBag.Role" />
    <input type="hidden" name="appPath" id="appPath" value="@ViewBag.appPath" />  <!--子站点名称-->
    <input type="hidden" name="appName" id="appName" value="@ViewBag.appName" />
    <input type="hidden" name="authCode" id="authCode" value="@ViewBag.authCode" />
    <input type="hidden" name="apiType" id="apiType" value="@ViewBag.apiType" />
</body>
</html>
@Scripts.Render("~/scripts/index-head-jsx")

@if (@ViewBag.Role == "management" || @ViewBag.Role == "admin")
{
    @Scripts.Render("~/scripts/management")
}
@if (@ViewBag.Role == "admin")
{
    @Scripts.Render("~/scripts/admin")
}
@Scripts.Render("~/scripts/index")
